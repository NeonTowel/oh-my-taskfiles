{
  "$schema": "https://opencode.ai/config.json",
  "enabled_providers": [ "azure-cognitive-services", "google-vertex", "azure-anthropic"],
  "provider": {
    "azure-cognitive-services": {
      "options": {
        "apiKey": "{env:AZURE_OPENAI_API_KEY}",
        "resourceName": "{{ .Env.FOUNDRY_RESOURCE_NAME }}",
        "setCacheKey": true
      }
    },
    "azure-anthropic": {
      "name": "Microsoft Foundry (Anthropic)",
      "npm": "@ai-sdk/anthropic",
      "api": "https://{{ .Env.FOUNDRY_RESOURCE_NAME }}.services.ai.azure.com/anthropic/v1",
      "env": ["AZURE_OPENAI_API_KEY"],
      "models": {
        "claude-opus-4-5": {
          "id": "claude-opus-4-5",
          "name": "Claude Opus 4.5",
          "tool_call": true,
          "attachment": true,
          "reasoning": true,
          "temperature": true,
          "options": {
            "thinking": {
              "type": "enabled",
              "budgetTokens": 16000
            }
          }
        },
        "claude-sonnet-4-5": {
          "id": "claude-sonnet-4-5",
          "name": "Claude Sonnet 4.5",
          "tool_call": true,
          "attachment": true,
          "reasoning": true,
          "temperature": true,
          "options": {
            "thinking": {
              "type": "enabled",
              "budgetTokens": 16000
            }
          }
        },
        "claude-haiku-4-5": {
          "id": "claude-haiku-4-5",
          "name": "Claude Haiku 4.5",
          "tool_call": true,
          "attachment": true,
          "reasoning": true,
          "temperature": true,
          "options": {
            "thinking": {
              "type": "enabled",
              "budgetTokens": 16000
            }
          }
        }
      }
    }
  },
  "model": "azure-anthropic/claude-haiku-4-5",
  "small_model": "google-vertex/gemini-2.5-flash-lite",
  "theme": "catppuccin-macchiato",
  "autoupdate": "notify",
  "logLevel": "WARN",
  "share": "disabled",
  "agent": {
    "build": {
      "mode": "primary",
      "temperature": 0.3,
      "tools": {
        "bash": true,
        "edit": true,
        "write": true,
        "read": true,
        "grep": true,
        "glob": true,
        "list": true,
        "patch": true,
        "skill": true,
        "todowrite": true,
        "todoread": true,
        "webfetch": true
      }
    },
    "plan": {
      "mode": "primary",
      "temperature": 0.6,
      "tools": {
        "bash": true,
        "edit": true,
        "write": true,
        "read": true,
        "grep": true,
        "glob": true,
        "list": true,
        "patch": true,
        "skill": true,
        "todowrite": true,
        "todoread": true,
        "webfetch": true
      }
    }
  }
}