{
  "$schema": "https://opencode.ai/config.json",
  "enabled_providers": [
    "azure-cognitive-services",
    "azure-moonshot",
    "google-vertex",
    "google-vertex-global",
    "azure-anthropic"
  ],
  "provider": {
    "azure-moonshot": {
      "name": "Microsoft Foundry (Moonshot)",
      "npm": "@ai-sdk/openai-compatible",
      "api": "https://{{ .Env.FOUNDRY_RESOURCE_NAME }}.services.ai.azure.com/models",
      "env": ["AZURE_OPENAI_API_KEY"],
      "models": {
        "kimi-k2-thinking": {
          "id": "kimi-k2-thinking",
          "name": "Kimi K2 Thinking",
          "options": {
            "useCompletionUrls": true
          }
        }
      }
    },
    "azure-cognitive-services": {
      "options": {
        "apiKey": "{env:AZURE_OPENAI_API_KEY}",
        "resourceName": "{{ .Env.FOUNDRY_RESOURCE_NAME }}"
      },
      "models": {
        "gpt-5-mini": {
          "id": "gpt-5-mini",
          "name": "GPT-5 Mini"
        }
      }
    },
    "google-vertex-global": {
      "name": "Google Vertex (Global)",
      "npm": "@ai-sdk/google-vertex",
      "options": {
        "location": "global",
        "project": "{{ .Env.VERTEX_PROJECT_NAME }}"
      },
      "models": {
        "gemini-3-flash-preview": {
          "id": "gemini-3-flash-preview",
          "name": "Gemini 3 Flash Preview"
        }
      }
    },
    "google-vertex": {
      "options": {
        "location": "{{ .Env.VERTEX_LOCATION }}",
        "project": "{{ .Env.VERTEX_PROJECT_NAME }}"
      },
      "models": {
        "gemini-2.5-flash-lite": {
          "id": "gemini-2.5-flash-lite",
          "options": {
            "thinkingConfig": {
              "includeThoughts": false,
              "thinkingBudget": 0
            }
          }
        }
      }
    },
    "azure-anthropic": {
      "name": "Microsoft Foundry (Anthropic)",
      "npm": "@ai-sdk/anthropic",
      "api": "https://{{ .Env.FOUNDRY_RESOURCE_NAME }}.services.ai.azure.com/anthropic/v1",
      "env": ["AZURE_OPENAI_API_KEY"],
      "models": {
        "claude-opus-4-5": {
          "id": "claude-opus-4-5",
          "name": "Claude Opus 4.5",
          "tool_call": true,
          "attachment": true,
          "reasoning": true,
          "temperature": true,
          "options": {
            "thinking": {
              "type": "enabled",
              "budgetTokens": 16000
            }
          }
        },
        "claude-sonnet-4-5": {
          "id": "claude-sonnet-4-5",
          "name": "Claude Sonnet 4.5",
          "tool_call": true,
          "attachment": true,
          "reasoning": true,
          "temperature": true,
          "options": {
            "thinking": {
              "type": "enabled",
              "budgetTokens": 16000
            }
          }
        },
        "claude-haiku-4-5": {
          "id": "claude-haiku-4-5",
          "name": "Claude Haiku 4.5",
          "tool_call": true,
          "attachment": true,
          "reasoning": true,
          "temperature": true,
          "options": {
            "thinking": {
              "type": "enabled",
              "budgetTokens": 16000
            }
          }
        }
      }
    }
  },
  "model": "azure-cognitive-services/gpt-5-mini",
  "small_model": "google-vertex/gemini-2.5-flash-lite",
  "theme": "catppuccin-macchiato",
  "autoupdate": "notify",
  "logLevel": "WARN",
  "share": "disabled",
  "agent": {
    "build": {
      "mode": "primary",
      "temperature": 0.3,
      "tools": {
        "bash": true,
        "edit": true,
        "write": true,
        "read": true,
        "grep": true,
        "glob": true,
        "list": true,
        "patch": true,
        "skill": true,
        "todowrite": true,
        "todoread": true,
        "webfetch": true
      }
    },
    "plan": {
      "mode": "primary",
      "temperature": 0.6,
      "tools": {
        "bash": true,
        "edit": true,
        "write": true,
        "read": true,
        "grep": true,
        "glob": true,
        "list": true,
        "patch": true,
        "skill": true,
        "todowrite": true,
        "todoread": true,
        "webfetch": true
      }
    }
  }
}
