# Basic settings
ZSH_DISABLE_COMPFIX=true
export ZSH="$HOME/.oh-my-zsh"
ZSH_THEME="mh"
DISABLE_UNTRACKED_FILES_DIRTY="true"

# Path configuration
export PATH=$HOME/bin:$HOME/.local/bin:/usr/local/bin:$PATH

# Oh My Zsh configuration
plugins=(git)
source $ZSH/oh-my-zsh.sh

# Completions
fpath=(/usr/local/share/zsh-completions $fpath)

# Aliases: lsd
if command -v lsd &> /dev/null; then
  alias ll='lsd -lh'
  alias ls='lsd'
  alias tree='ls --tree'
fi

# Aliases: bat
if command -v bat &> /dev/null; then
  alias cat='bat'
  alias ccat='bat --style=-grid,-numbers --paging=never'
fi

# Aliases: git
alias gl='git log --graph --decorate --pretty=oneline --abbrev-commit'
alias gs='git status --renames'

# Google Cloud SDK
if [ -f "$HOME/google-cloud-sdk/path.zsh.inc" ]; then
  source "$HOME/google-cloud-sdk/path.zsh.inc"
fi
if [ -f "$HOME/google-cloud-sdk/completion.zsh.inc" ]; then
  source "$HOME/google-cloud-sdk/completion.zsh.inc"
fi

# Direnv configuration
if command -v direnv &> /dev/null; then
  eval "$(direnv hook zsh)"
fi

# Starship configuration
if command -v starship &> /dev/null; then
  eval "$(starship init zsh)"
fi

# Go-task configuration
if command -c task &> /dev/null; then
    eval "$(task --completion zsh)"
fi

# Oh-My-Taskfiles configuration
if [ -f "$HOME/.omt/taskfile.yaml" ]; then
  alias omt='task -d $HOME/.omt'
fi
